generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Paper {
  id        String   @id @default(cuid())
  title     String
  authors   String
  abstract  String
  arxivId   String   @unique
  eloRating Float    @default(1500)
  published DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
